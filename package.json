{
  "name": "bands-builder",
  "version": "1.0.0",
  "description": "",
  "main": "bin/www",
  "bin": {
    "bands-builder": "./bin/www"
  },
  "scripts": {
    "lint": "find . -path ./node_modules -prune -o -name '*.js' -print0 | xargs -0 prettier-check",
    "format": "find . -path ./node_modules -prune -o -name '*.js' -print0 | xargs -0 prettier --write",
    "build": "npm run clean; babel src --out-dir dist --source-maps --copy-files",
    "start": "node bin/www",
    "start:dev": "npm run build && node --inspect=9230 bin/www",
    "start:watch": "npm run build && nodemon --watch src --exec npm run start:dev",
    "start:prod": "npm run build && node bin/www",
    "clean": "rm -Rf ./dist ./logs",
    "test": "NODE_ENV=test jest",
    "test:watch": "npm run test -- --watch",
    "precommit": "lint-staged",
    "zip": "git archive -o bundle.zip HEAD"
  },
  "author": "Aliaksandr Famchankou <afamchankou@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@decorators/di": "^2.0.0",
    "@decorators/express": "^2.9.3",
    "@decorators/socket": "^3.4.1",
    "bcrypt": "^5.1.0",
    "camelcase-keys": "^8.0.2",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-router": "^0.1.15",
    "express-validator": "^6.15.0",
    "joi": "^17.9.1",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "node-cache": "^5.1.2",
    "redis": "^4.6.5",
    "sqlite3": "^5.1.6",
    "winston": "^3.8.2"
  },
  "engines": {
    "node": ">=12.16.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.3",
    "@babel/node": "^7.20.7",
    "@babel/plugin-proposal-decorators": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "prettier-check": "^2.0.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
